pipeline{
  agent any

  tools{
    jdk 'JDK21'
  }

  stages{
    stage('checkout'){
    steps{
        git branch:'master' ,url:'https://github.com/1ms24mc049/my_repo'
      }
    }
    stage('compile'){
      steps{
        echo"compiling the java pgm"
        sh 'javac H1.java'
      
    }
    }
    stage('run'){
      steps{
        echo"running the java pgm"
        sh 'java H1'
      
    }
    }
    post{
      success{
        echo"Building and execution successful"
      }
      failure{
        echo"Build failed"
      }
  }
  }
}
